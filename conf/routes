# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                         controllers.Application.index
GET     /observe/:locLat/:locLon                  controllers.Application.observe(locLat: Double, locLon: Double)
GET     /traintable/:observerId/:locLat/:locLon   controllers.Application.traintable(observerId: Long, locLat: Double, locLon: Double)

GET     /trainpoint/countAll                      controllers.Application.countTrainPoints
GET     /trains/:locLat/:locLon                   controllers.Application.trainsNearBy(locLat: Double, locLon: Double)

GET     /wake                                     controllers.Application.keepAwake

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                             controllers.Assets.at(path="/public", file)
