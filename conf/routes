# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                    controllers.Application.index
GET     /traintable/:observerId              controllers.Application.traintable(observerId: Long)

GET     /trainpoint/countAll                 controllers.Application.countTrainPoints
GET     /trainpoint/nearby/:locLat/:locLon   controllers.Application.trainsNearBy(locLat: Double, locLon: Double)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                        controllers.Assets.at(path="/public", file)
